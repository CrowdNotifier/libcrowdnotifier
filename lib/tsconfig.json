{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "module": "CommonJS",
    "downlevelIteration": true
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "./src/**/*.ts",
    "./types/*.d.ts"
  ]
}
